@page
@model MyFriends.Pages.AddModel
@{
ViewData["Title"] = "Add Friend";
}

<h1>Add a New Friend</h1>

<form method="post">
    <div>
        <label asp-for="NewFriend.Name">Name:</label>
        <input asp-for="NewFriend.Name" class="form-control" />
        <span asp-validation-for="NewFriend.Name"></span>
    </div>
    <div>
        <label asp-for="NewFriend.Age">Age:</label>
        <input asp-for="NewFriend.Age" class="form-control" />
        <span asp-validation-for="NewFriend.Age"></span>
    </div>
    <button type="submit">Add Friend</button>
</form>

<a href="/">Back to List</a>